---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { date, title, link, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-[rgb(240,240,240)] rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-[rgb(220,220,220)]">
  {date}
</time>
<h3 class="text-lg font-semibold text-[rgb(240,240,240)]">{title}</h3>
<p class="mb-4 text-base font-normal text-[rgb(200,200,200)]">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-[rgb(240,240,240)] bg-[rgb(25,25,25)] border border-[rgb(220,220,220)] rounded-lg hover:bg-[rgb(50,50,50)] hover:text-blue-400 focus:z-10 focus:ring-4 focus:outline-none focus:ring-[rgb(100,100,100)]"
    >
      Saber m√°s...
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
