---
// Datos de proyectos
const projects = [
  {
    title: "Mentana",
    description: "Aplicación con 8 juegos para adultos mayores",
    tech: ["Spring boot", "Angular", "MVC"],
    image: "/Portafolio/imagen/mentana.jpg",
    link: "https://github.com/LeoDev/digimon-api",
    live: "https://digimon.leodev.com",
  },
  {
    title: "API de Digimon",
    description: "Aplicación en .NET que consume la API de Digimon.",
    tech: ["C#", ".NET", "MVC"],
    image: "/Portafolio/imagen/digimonApi.jpg",
    link: "https://github.com/leo0994/digimon-api",
    live: "https://digimon.leodev.com",
  },
  {
    title: "Tic-Tac-Toe en React",
    description: "Juego clásico con lógica optimizada y estilos modernos.",
    tech: ["React", "Tailwind CSS"],
    image: "/Portafolio/imagen/TicTacToeV3.jpg",
    link: "https://github.com/leo0994/tic-tac-toe",
    live: "https://tic-tac-toe.leodev.com",
  },
  {
    title: "Ruby Space Suites",
    description:
      "Sistema de reservas de un hotel con autenticación y pagos online.",
    tech: ["Ruby on Rails", "PostgreSQL", "Bootstrap"],
    image: "/Portafolio/imagen/RubiProyecto.jpg",
    link: "https://github.com/leo0994/ruby-space-suites",
    live: "https://rubyspacesuites.leodev.com",
  },
  {
    title: "Sistema de Farmacia (Spring Boot)",
    description: "Gestión de medicamentos y usuarios con Spring Boot y MVC.",
    tech: ["Java", "Spring Boot", "Thymeleaf", "PostgreSQL"],
    image: "/Portafolio/imagen/farmacia.jpg",
    link: "https://github.com/LeoDev/farmacia-mvc",
    live: null,
  },
];
---

<section id="proyectos" class="max-w-6xl mx-auto px-4 py-12">
  <!-- Título con imagen giratoria -->
  <div class="flex justify-center items-center mb-8 gap-4">
    <img
      src="/Portafolio/icons/logoplasmaceleste.png"
      alt="Logo animado"
      class="w-12 h-12 animate-spin-slow hover:scale-110 transition duration-300"
    />
    <h2
      class="text-4xl font-bold text-white text-center"
      data-i18n="misProyectos"
    >
      Mis Proyectos
    </h2>
  </div>

  <!-- Lista de proyectos -->
  <div class="space-y-12">
    {
      projects.map((project) => (
        <div class="space-y-6">
          <div class="flex flex-col md:flex-row rounded-lg shadow-lg hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
            <img
              src={project.image}
              alt={project.title}
              loading="lazy"
              style="max-width:100%;height:auto;"
              class="w-full md:w-1/3 h-48 object-cover rounded-t-lg md:rounded-l-lg md:rounded-tr-none"
              onerror="this.onerror=null; this.src='/Portafolio/imagen/LogoPlasmaCeleste.png';"
            />
            <div class="p-6 flex flex-col justify-between">
              <div>
                <h3 class="text-2xl font-semibold text-white">
                  {project.title}
                </h3>
                <p class="text-gray-400 text-sm mt-2">{project.description}</p>
              </div>
              <div class="flex flex-wrap gap-2 mt-3">
                {project.tech.map((tech) => (
                  <span
                    class="bg-gray-700 text-gray-300 px-3 py-1 rounded text-xs"
                    data-i18n={tech}
                  >
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex justify-between mt-4">
                <a
                  href={project.link}
                  class="text-blue-400 hover:text-blue-300 font-semibold"
                  target="_blank"
                  data-i18n="codigoFuente"
                >
                  🔗 Código
                </a>
                {project.live ? (
                  <a
                    href={project.live}
                    class="text-green-400 hover:text-green-300 font-semibold"
                    target="_blank"
                    data-i18n="demo"
                  >
                    🚀 Demo
                  </a>
                ) : (
                  <span
                    class="text-gray-500 italic"
                    data-i18n="demoNoDisponible"
                  >
                    Demo no disponible
                  </span>
                )}
              </div>
            </div>
          </div>
          <hr class="border-white/20" />
        </div>
      ))
    }
  </div>
</section>
